<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp05"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wudayu.demo.animationset.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_infinity_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无限旋转"
            android:layout_margin="@dimen/dp05"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_dota"
            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"
            android:scaleType="fitXY"
            android:src="@drawable/dota"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
